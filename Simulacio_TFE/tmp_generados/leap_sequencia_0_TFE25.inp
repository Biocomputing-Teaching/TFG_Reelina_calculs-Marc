setBox x centers

savePDB x seq_pdb_generados/sequencia_0_TFE25.pdb
saveAmberParm x seq_parm7_rst7/sequencia_0_TFE25.parm7 seq_parm7_rst7/sequencia_0_TFE25.rst7
quit
